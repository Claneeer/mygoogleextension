{
  "manifest_version": 3,
  "name": "Forçador de Tema (Claro/Escuro)",
  "version": "1.0.0",
  "description": "Alterne entre um tema claro ou escuro em qualquer site com um clique.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_title": "Forçar Tema",
    "default_popup": "src/popup/popup.html"
  },
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ]
}